<% if(clickedBlog != null){ %>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- clickedBlog.name %></li>
        </ol>
    </nav>

    <div class="row">

        <div class="col-12 col-md-4">
            <img src="/uploads/<%- clickedBlog.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- clickedBlog.name %>" loading="lazy">
        </div>

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h1><%- clickedBlog.name %></h1></div>
                <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- clickedBlog.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                <h4>Travelling experience</h4>
                <%- clickedBlog.description %>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-12">
                    <h4>Regional Food</h4>
                    <ul class="list-group list-group-flush">
                        <% clickedBlog.favouritefood.forEach(function(food, index){ %>
                            <li class="list-group-item"><%= food %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <p>No item found.</p>
<% } %>